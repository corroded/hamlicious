= content_for(:head) do
  %title Farora.com 
  = stylesheet_link_tag 'compiled/farora/main.css', :media => 'screen, projection'
  = stylesheet_link_tag 'compiled/print.css', :media => 'print'
  /[if lt IE 8]
    = stylesheet_link_tag 'compiled/farora/ie.css', :media => 'screen, projection'
  = stylesheet_link_tag 'compiled/farora/dark-hive/jquery-ui-1.8.9.custom.css', :media => 'screen, projection'
  
  = javascript_include_tag 'jquery-1.4.4.min', 'jquery-ui-1.8.9.custom.min', 'jquery.rating', 'jquery.tablesorter', 'farora'

#container
  = render :partial => "projects/farora/header"
  = render :partial => "projects/farora/sub_nav"
  
  = render :partial => "projects/farora/#{@myaction}"
  
= render :partial => "projects/farora/footer"